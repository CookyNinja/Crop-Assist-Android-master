<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainmenu_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="top"
        android:layout_marginHorizontal="10dp">


        <View
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="10dp"
            android:background="@color/white" />


        <TextView
            android:id="@+id/app_name_display_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Crop "
            android:textSize="50dp"
            />


        <TextView
            android:id="@+id/app_name_display_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Assist"
            android:textSize="50dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="10dp"
            android:background="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginVertical="10dp">

            <Button
                android:id="@+id/identify_crop_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="Identify Crop"
                android:textSize="20sp"
                android:background="@drawable/rounded_corner"
                android:textAllCaps="false"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal"
                android:background="@drawable/rounded_corner"
                >

                <TextView
                    android:id="@+id/tv_select_crop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Select Crop :  "
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textAllCaps="false"/>

                <Spinner
                    android:id="@+id/crop_drop_down"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    style="@style/spinner_style"/>

            </LinearLayout>

            <Button
                android:id="@+id/identify_disease_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:text="Identify Disease"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:background="@drawable/rounded_corner"
                />

            <Button
                android:id="@+id/disease_details_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:text="Disease Details"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:background="@drawable/rounded_corner"
                />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>